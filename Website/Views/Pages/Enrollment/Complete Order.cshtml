            <p>@Html.Sitecore().Field("Set Up Card")</p>
            <h2>@Html.Sitecore().Field("Homelife Services")</h2>
            <table>
                <tbody>
                    <tr class="line-item">
                        <td class="description">
                            <h1>@Html.Sitecore().Field("Stream Tech Support")</h1>
