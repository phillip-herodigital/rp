<div ng-controller="EnrollmentMainCtrl" ng-init="setServerData()" data-val-bind-messages="validations">
    <div ng-repeat="section in enrollment.sections | orderBy: 'order'" ng-switch on="section.id">
        @Html.Sitecore().Placeholder("enrollment sections")
    </div>
</div>

<script type="text/ng-template" id="enrollment-nav-template">
    <nav>
        <ul>
            <li ng-class="{'completed' : section.isVisible && section.id != enrollment.currentSection, 'active' : section.id == enrollment.currentSection}" ng-repeat="section in enrollment.sections | orderBy: 'order'" ng-show="section.isVisible"><a href="#{{section.id}}">{{section.name}}</a></li>
            <li ng-show="enrollment.nextSection"><a href="">@Html.Sitecore().Field("Continue")</a></li>
        </ul>
    </nav>
</script>

@Html.Sitecore().Placeholder("enrollment templates")