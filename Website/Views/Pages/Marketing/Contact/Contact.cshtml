            @Html.Sitecore().Field("Associate Support Content")
        </div>
    </div>
    <div class="homelife-services">
        <div class="wrapper">
            <h2>@Html.Sitecore().Field("Homelife Services Text")</h2>
            @Html.Sitecore().Field("Homelife Services Content")
        </div>
    </div>
    <div class="clean-nation">
        @Html.Sitecore().Field("Clean Nation Content")
    </div>
    <div class="vip wrapper">
        <h2>@Html.Sitecore().Field("VIP Support Text")</h2>
        @Html.Sitecore().Field("VIP Support Content")
    </div>
    <div class="request">
        <div class="request-or"></div>
        <div class="wrapper">
            <h2>@Html.Sitecore().Field("Request Form Text")</h2>
            <p>@Html.Sitecore().Field("Required Form Text")</p>
            <form action="/contact" method="post">
                <div class="grid">
                    <div class="col">
                        <div class="item">
                            <label for="firstName">@Html.Sitecore().Field("First Name Text")</label>
                            <input type="text" id="firstName" name="firstName" required placeholder="@Html.Sitecore().Field("First Name Placeholder")">
                            <span class="asterisk">&#42;</span>
                        </div>
                        <div class="item">
                            <label for="lastName">@Html.Sitecore().Field("Last Name Text")</label>
                            <input type="text" id="lastName" name="lastName" required placeholder="@Html.Sitecore().Field("Last Name Placeholder")">
                            <span class="asterisk">&#42;</span>
                        </div>
                        <div class="item">
                            <label for="address">@Html.Sitecore().Field("Service Address Text")</label>
                            <input type="text" id="address" name="address" placeholder="@Html.Sitecore().Field("Service Address Placeholder")">
                        </div>
                        <div class="group">
                            <div class="item">
                                <label for="city">@Html.Sitecore().Field("City Text")</label>
                                <input type="text" id="city" name="city" required placeholder="@Html.Sitecore().Field("City Placeholder")">
                                <span class="asterisk">&#42;</span>
                            </div>
                            <div class="item">
                                <label for="state">@Html.Sitecore().Field("State Text")</label>
                                <select id="state" name="state" required>
                                    @Html.Sitecore().Field("State Options")
                                </select>
                                <span class="asterisk">&#42;</span>
                            </div>
                            <div class="item">
                                <label for="zipCode">@Html.Sitecore().Field("Zip Code Text")</label>
                                <input type="text" id="zipCode" name="zipCode" required placeholder="@Html.Sitecore().Field("Zip Code Placeholder")">
                                <span class="asterisk">&#42;</span>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="item">
                            <label for="phone">@Html.Sitecore().Field("Phone Text")</label>
                            <input type="text" id="phone" name="phone" placeholder="@Html.Sitecore().Field("Phone Placeholder")">
                        </div>
                        <div class="item">
                            <label for="email">@Html.Sitecore().Field("Email Text")</label>
                            <input type="email" id="email" name="email" required placeholder="@Html.Sitecore().Field("Email Placeholder")">
                            <span class="asterisk">&#42;</span>
                        </div>
                        <div class="item">
                            <label for="reason">@Html.Sitecore().Field("Reason Text")</label>
                            <select id="reason" name="reason" required>
                                @Html.Sitecore().Field("Reason Options")
                            </select>
                            <span class="asterisk">&#42;</span>
                        </div>
                        <div class="item">
                            <label for="comments">@Html.Sitecore().Field("Explain Text")</label>
                            <textarea id="comments" name="comments" required placeholder="@Html.Sitecore().Field("Explain Placeholder")"></textarea>
                            <span class="asterisk">&#42;</span>
                        </div>
                        <button type="submit">@Html.Sitecore().Field("Send Button Text")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @if (Model != null && Model.ShowSuccessMessage)
    {
        <div class="success-message" id="success-message">
            <div class="wrapper">
                <h2>@Html.Sitecore().Field("Thank You Text")</h2>
                <h4>@Html.Sitecore().Field("Success Message Text")</h4>
            </div>
        </div>
    }
