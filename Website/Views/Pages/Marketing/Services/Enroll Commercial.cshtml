@model StreamEnergy.MyStream.Models.Marketing.CommercialQuote
@using System.Linq.Expressions;
@using StreamEnergy.Extensions;

<article class="marketing photoLockup commercial-quote">
    <div class="photo">
    </div>
    <div class="text">
        <div class="inner">
            <h2>@Html.Sitecore().Field("Form Title")</h2>
            @Html.Sitecore().Field("Form Intro Text")
            <form action="@Request.Url.AbsolutePath" method="post">
                @Html.ValidationSummary()

                <div class="item" @Html.ValidationErrorClass(model => model.ContactName.First)>
                    <input type="text" placeholder="@Html.Sitecore().Field("First Name Placeholder Text")" @Html.ValidationAttributes(m => m.ContactName.First) ng-model="firstName" />
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.ContactName.Last)>
                    <input type="text" placeholder="@Html.Sitecore().Field("Last Name Placeholder Text")" @Html.ValidationAttributes(m => m.ContactName.Last) ng-model="lastName" />
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.CompanyName)>
                    <input type="text" placeholder="@Html.Sitecore().Field("Company Name Placeholder Text")" @Html.ValidationAttributes(m => m.CompanyName) ng-model="company" />
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.ContactPhone.Number)>
                    <input type="tel" placeholder="@Html.Sitecore().Field("Phone Number Placeholder Text")" @Html.ValidationAttributes(m => m.ContactPhone.Number) ng-model="phone" />
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.ContactEmail.Address)>
                    <input type="email" placeholder="@Html.Sitecore().Field("Email Placeholder Text")" @Html.ValidationAttributes(m => m.ContactEmail.Address) ng-model="email" />
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.ContactAddress.Line1)>
                    <input type="text" placeholder="@Html.Sitecore().Field("Service Address Placeholder Text")" @Html.ValidationAttributes(m => m.ContactAddress.Line1) ng-model="address" />
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.ContactAddress.City)>
                    <input type="text" placeholder="@Html.Sitecore().Field("City Placeholder Text")" @Html.ValidationAttributes(m => m.ContactAddress.City) ng-model="city" />
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.ContactAddress.StateAbbreviation)>
                    <select @Html.ValidationAttributes(m => m.ContactAddress.StateAbbreviation) ng-model="state">
                        @Html.Sitecore().Field("State Options")
                    </select>
                </div>
                <div class="item" @Html.ValidationErrorClass(model => model.ContactAddress.PostalCode5)>
                    <input type="text" placeholder="@Html.Sitecore().Field("Zip Code Placeholder Text")" @Html.ValidationAttributes(m => m.ContactAddress.PostalCode5) ng-model="zipCode" />
                </div>
                <div class="item">
                    <button type="submit" data-val-submit>@Html.Sitecore().Field("Send Button Text")</button>
                </div>
            </form>
        </div>
    </div>
</article>
@if (Model != null && Model.ShowSuccessMessage)
{
    <article class="marketing commercial-quote">
        <div class="success-message" id="success-message">
            <div class="wrapper">
                <h2>@Html.Sitecore().Field("Thank You Text")</h2>
                <h4>@Html.Sitecore().Field("Success Message Text")</h4>
            </div>
        </div>
    </article>
}
