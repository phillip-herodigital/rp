@model IEnumerable<Sitecore.Data.Items.Item>
@{
    <dl class="faq">
        @foreach (var item in Model)
        {
            var faqStatesField = (Sitecore.Data.Fields.MultilistField)item.Fields["FAQ States"];
            var states = string.Join(" ", faqStatesField.GetItems().Select(stateItem => stateItem.Name));
            <dt data-collasped data-states="@states" onclick="this.hasAttribute('data-collasped') ? this.removeAttribute('data-collasped') : this.setAttribute('data-collasped','data-collasped')">@Html.Sitecore().Field("FAQ Question", item)</dt>
            <dd data-states="@states">@Html.Sitecore().Field("FAQ Answer", item)</dd>
        }
    </dl>
}