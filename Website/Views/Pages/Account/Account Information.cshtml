<section class="layout cols-2 wrapper">
    <section class="layout cols-1">
        <article class="balances-payments" ng-controller="AccountBalances">
            <div class="content" @*loading-indicator*@>
                <div class="account-selector">
                    <form>
                        <div class="group">
                            <div class="item">
                                <label>@Html.Sitecore().Field("Account Number Text")</label>
                                <select ng-model="selectedAccount.account" ng-options="item.accountNumber for item in accounts">
                                    <option value="">All</option>
                                </select>
                            </div>
                            <div class="item">
                                <label>@Html.Sitecore().Field("Meter ID Text")</label>
                                <select class="id">
                                    <option value="Please choose">109437200008913264</option>
                                    <option value="account1">ID 2</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="grid border">
                    @Html.Sitecore().Field("Service Address Text") 123 Main Street, Dallas, TX 75001
                </div>
            </div>
        </article>

        <form>

            <article class="grey-box account-holder-information">
                <div class="content">
                    <div class="item account-holder">
                        <label class="account-holder-title">@Html.Sitecore().Field("Account Holder Name Text")</label>
                        Mr. John A. Doe
                    </div>
                    <div class="group">
                        <div class="item group-col" float-label>
                            <label for="primary-phone">@Html.Sitecore().Field("Primary Phone Number Text")</label>
                            <input type="tel" name="primary-phone" id="primary-phone" placeholder="">
                        </div>
                        <div class="item group-col">
                           @Html.Sitecore().Field("Phone Type Content")
                        </div>
                    </div>
                    <div class="additional-field-action">
                        <a href="#">@Html.Sitecore().Field("Additional Phone Text")</a>
                    </div>
                    <div class="group additional-field-group">
                        <div class="group">
                            @Html.Sitecore().Field("Additional Phone Content")
                        </div>
                    </div>
                    <hr class="content-divider" />
                    <h3 class="billing-address-title">@Html.Sitecore().Field("Billing Address Text")</h3>
                    <div class="item">
                        <ul class="checkbox-list">
                            <li>
                                <input type="checkbox" name="billing-address" id="billing-address">
                                <label for="billing-address">@Html.Sitecore().Field("Same Address Text")</label>
                            </li>
                        </ul>
                        <div class="billing-address">
                            123 Main St.<br>
                            Dallas, TX 75001
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="buttons">
                        <button type="submit">@Html.Sitecore().Field("Save Button Text")</button>
                    </div>
                </footer>
            </article>
        </form>
    </section>
    <aside>
        @Html.Sitecore().Placeholder("sidebar")
    </aside>
</section>