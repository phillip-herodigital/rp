<div class="banner" style="@Html.AsBackgroundStyle("Mobile Banner Image")">
    <div class="wrapper">
        <h1>
            <span class="small block">@Html.Sitecore().Field("4 - Page Title")</span><br />
        </h1>
    </div>
</div>

@* Two-column layout for Complete Order *@
<section class="wrapper layout cols-2">
    <section>
        <article class="enrollment__box enrollment__complete-order">
        	<header>
        		<h1>Complete Order</h1>
        		<p>Based on your order, the following payment is necessary for completion.</p>
        	</header>
        	<div class="content">
        		<div class="plan-summary">
        			<h3>Monthly Plan Cost</h3>
        			<p>Plan includes Unlimited Voice, Text, and 7.5GB data</p>
        			<p><a href="">Plan Details</a> | <a href="">Edit Plan</a> | <a href="">Configure Data</a></p>
        			<p>Tax and Other Fess*</p>
        			<a href="">Show Breakdown</a>
        		</div>
        		<div class="phone-summary">
        			Reconditioned
        			<h3>Apple iPhone 5S</h3>
        			16B, Silver <a href="">Edit</a>

        			<h4>Initial Activiation Fee</h4>
        			This one-time fee lorem ipsum dolor

        			<h4>Coverage Warranty</h4>

        			<h4>Shipping</h4>
        		</div>
        	</div>
        	<footer>
        		Total Due Now: $439.97
        	</footer>
        </article>

        <article class="enrollment__box enrollment__contact-info">
        	<header>
        		<h1>Contact Information</h1>
        	</header>
        	<div class="content form">
        		<h3>Personal Information</h3>
				<div class="group">
					<div class="item group-col">
						<label for="">First Name:</label>
						<input type="text">
					</div>
					<div class="item group-col">
						<label for="">Last Name:</label>
						<input type="text">
					</div>
				</div>
				<div class="group">
					<div class="item group-col">
						<label for="">Phone Number:</label>
						<input type="text">
					</div>
					<div class="item group-col">
						<label for="">Phone Type:</label>
						<input type="text">
					</div>
				</div>
				<div class="group">
					<div class="item group-col">
						<label for="">Email Address:</label>
						<input type="text">
					</div>
				</div>
				<hr>
				<h3>Billing Address</h3>
				<div class="group">
					<div class="item group-col">
						<label for="">Address 1:</label>
						<input type="text">
					</div>
					<div class="item group-col">
						<label for="">Address 2:</label>
						<input type="text">
					</div>
				</div>
				<div class="group">
					<div class="item group-col">
						<label for="">City:</label>
						<input type="text">
					</div>
					<div class="item group-col">
						<label for="">State:</label>
						<input type="text">
					</div>
					<div class="item group-col">
						<label for="">Zip Code:</label>
						<input type="text">
					</div>
				</div>
				<hr>
				<h3>Shipping Address</h3>
				<label><input type="checkbox"> Same as Billing Address</label>
        	</div>
        </article>


        <article class="enrollment__box enrollment__payment-info">
        	<header>
        		<h1>Payment Information</h1>
        	</header>
        	<div class="content">
        	</div>
        </article>


        <article class="enrollment__box enrollment__terms-conditions">
        	<header>
        		<h1>Terms &amp; Conditions</h1>
        	</header>
        	<div class="content">
        		<p><label><input type="checkbox"> I agree to Stream's Terms &amp; Conditions</label></p>
				<p><textarea name="" id="" cols="30" rows="10"></textarea></p>
        		<p><label><input type="checkbox"> I agree to the TCPA, Email Marketing, and The Wire Terms &amp; Conditions</label></p>
        	</div>
        </article>
        <p>*Fees are estimated based on your state's average charges.</p>
        <button type="button" class="plain">Cancel Enrollment</button>
        <button type="button">Next</button>
    </section>
</section>