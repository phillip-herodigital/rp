<script type="text/ng-template" id="mobile-enrollment-cart">
    <div class="enrollment__cart" ng-controller="EnrollmentCartCtrl">
        <article class="enrollment__box" scroll-anchor="scrollFix">
            <header>
                <div class="cart-items" ng-if="!isCartOpen()">
                    <i class="icon-cart"></i>
                    <div class="item-num" ng-show="getCartCount()">{{ getCartCount() }}</div>
                </div>
                <i class="icon-close" ng-click="toggleCart();" ng-if="isCartOpen()"></i>
                <h1>@Html.Sitecore().Field("Cart Header")</h1>
            </header>
            <div class="content">
                @*<p class="alt" ng-if="!getCartCount() && !getCartItems().length">@Html.Sitecore().Field("Empty Cart Text")</p>*@
                <div class="cart-item">
                    <h2>@Html.Sitecore().Field("6 - Mobile Services Header")</h2>
                    <div class="mobile-plan">
                        Lorem Ipsum AT&amp;T Network plan <br />
                        <a href="">@Html.Sitecore().Field("Edit Plan Link")</a>
                    </div>
                    <div class="cart-product clearfix" ng-if="ctrl.mobileService.getCart().phone">
                        <div class="description">
                            <span class="condition">{{ ctrl.mobileService.getCart().model.condition }}</span> <br />
                            <span class="model">{{ ctrl.mobileService.getCart().phone.name }}</span> <br />
                            <span class="options">{{ ctrl.mobileService.getCart().model.size }}, {{ ctrl.mobileService.getCart().color.value }}</span> <br />
                            <a href="">@Html.Sitecore().Field("Edit Phone Link")</a>
                        </div>
                        <div class="rate">{{ ctrl.mobileService.getCart().model.price | currency }}</div>
                        <div ng-if="ctrl.mobileService.getCart().warranty != ''">
                            <div class="description">@Html.Sitecore().Field("6 - Phone Warranty Text")</div>
                            <div class="rate">$9.95/mo</div>
                        </div>
                    </div>
                    <div class="cart-product clearfix" ng-if="ctrl.mobileService.getCart().plan">
                        <h2>@Html.Sitecore().Field("6 - Monthly Plan Text")</h2>
                        <div class="description">
                            7.5 GB Included Data <br />
                            <a href="">@Html.Sitecore().Field("Configure Data Link")</a>
                        </div>
                        <div class="rate">$39/mo</div>
                    </div>
                </div>
                <div class="time">
                    <p>
                        <i class="icon-clock"></i>
                        @Html.Sitecore().Field("Time Remaining").Format(new { time = "{{time()}}" })
                    </p>
                </div>
            </div>
        </article>
        <article class="enrollment__box">
            <header>
                <p>@Html.Sitecore().Field("Youll Need Header")</p>
            </header>
            <ul class="info">
                <li><i class="icon-credit-card"></i> @Html.Sitecore().Field("Credit Card Text")</li>
                <li><i class="icon-billing-address"></i>  @Html.Sitecore().Field("Billing Address Text")</a></li>
                <li><i class="icon-imei"></i> @Html.Sitecore().Field("IMEI Number Text") <br /> @Html.Sitecore().Field("6 - Bring Your Own Phone Text")</li>
            </ul>
        </article>
    </div>
</script>