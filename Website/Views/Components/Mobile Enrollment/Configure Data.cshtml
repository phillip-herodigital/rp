<div class="banner" style="@Html.AsBackgroundStyle("Mobile Banner Image")">
    <div class="wrapper">
        <h1>
            <span class="small block">@Html.Sitecore().Field("3 - Page Title")</span><br />
        </h1>
    </div>
</div>

@* Two-column layout for Configure Data *@
<section class="wrapper layout cols-2">
    <section>
        <article class="enrollment__box enrollment__configure-data">
            <header>
                <h1>@Html.Sitecore().Field("3 - Header - Select Data Amount")</h1>
            </header>
            <div class="content">
                <h3 class="mobile-plans-header">@Html.Sitecore().Field("3 - Header - Choose Data Amount")</h3>
                
                <div class="btn-group btn-group-options mobile-plans">
                    <div class="button" ng-model="ctrl.phoneOptions.plan" btn-radio="'plan1'">
                        <p>
                            <span class="size">500 MB</span>
                            <span class="price">$39/mo</span></p>
                        </p>
                        <hr>
                        <p class="details">
                            <span>@Html.Sitecore().Field("3 - Streaming Music Text")<br /><span class="time">2 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Streaming Movies Text")<br /><span class="time">3 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Web Browsing Text")<br /><span class="time">12 hours</span></span>
                        </p>
                    </div>
                    <div class="button is-recommended" ng-model="ctrl.phoneOptions.plan" btn-radio="'plan2'">
                        <span class="recommended">Recommended</span>
                        <p>
                            <span class="size">2.5 GB</span>
                            <span class="price">$49/mo</span></p>
                        </p>
                        <hr>
                        <p class="details">
                            <span>@Html.Sitecore().Field("3 - Streaming Music Text")<br /><span class="time">20 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Streaming Movies Text")<br /><span class="time">8 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Web Browsing Text")<br /><span class="time">20 hours</span></span>
                        </p>
                    </div>
                    <div class="button" ng-model="ctrl.phoneOptions.plan" btn-radio="'plan3'">
                        <p>
                            <span class="size">5 GB</span>
                            <span class="price">$59/mo</span></p>
                        </p>
                        <hr>
                        <p class="details">
                            <span>@Html.Sitecore().Field("3 - Streaming Music Text")<br /><span class="time">34 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Streaming Movies Text")<br /><span class="time">14 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Web Browsing Text")<br /><span class="time">32 hours</span></span>
                        </p>
                    </div>
                    <div class="button" ng-model="ctrl.phoneOptions.plan" btn-radio="'plan4'">
                        <p>
                            <span class="size">7.5 GB</span>
                            <span class="price">$69/mo</span></p>
                        </p>
                        <hr>
                        <p class="details">
                            <span>@Html.Sitecore().Field("3 - Streaming Music Text")<br /><span class="time">50 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Streaming Movies Text")<br /><span class="time">18 hours</span></span>
                            <span>@Html.Sitecore().Field("3 -  Web Browsing Text")<br /><span class="time">40 hours</span></span>
                        </p>
                    </div>

                    @*<a ng-repeat="color in item.colors" class="button {{ color.color }}" ng-model="ctrl.phoneOptions.color" btn-radio="'{{ color.color }}'" uncheckable>{{ color.value }}</a>*@
                </div>
            </div>
            <footer>
                @Html.Sitecore().Field("3 - Need More Data")
            </footer>
        </article>
        <div class="clearfix">
            <button type="button" class="plain plain-footer">@Html.Sitecore().Field("3 - Button - Cancel Enrollment")</button>
            <button type="button" class="pull-right">@Html.Sitecore().Field("3 - Button - Next")</button>
        </div>
    </section>
    <aside>
        @*<div ng-include src="'enrollment-nav-template'"></div>*@

        <div class="enrollment__cart" ng-controller="EnrollmentCartCtrl">
            <article class="enrollment__box" scroll-anchor="scrollFix">
                <header>
                    <div class="cart-items" ng-if="!isCartOpen()">
                        <i class="icon-cart"></i>
                        <div class="item-num" ng-show="getCartCount()">{{ getCartCount() }}</div>
                    </div>
                    <i class="icon-close" ng-click="toggleCart();" ng-if="isCartOpen()"></i>
                    <h1>@Html.Sitecore().Field("6 - Cart Header")</h1>
                </header>
                <div class="content">
                    @*<p class="alt" ng-if="!getCartCount() && !getCartItems().length">@Html.Sitecore().Field("Empty Cart Text")</p>*@
                    <div class="cart-item">
                        <h2>@Html.Sitecore().Field("6 - Mobile Services Header")</h2>

                        <div class="mobile-plan">
                            Lorem Ipsum AT&amp;T Network plan <br />
                            <a href="">@Html.Sitecore().Field("6 - Edit Plan Link Text")</a> | <a href="">@Html.Sitecore().Field("6 - Plan Details Link Text")</a>
                        </div>

                        <div class="cart-product clearfix">
                            <div class="description">
                                <span class="condition">Reconditioned</span> <br />
                                <span class="model">Apple iPhone 5S</span> <br />
                                <span class="options">16GB, Silver</span> <br />
                                <a href="">@Html.Sitecore().Field("6 - Edit Phone Link Text")</a>
                            </div>
                            <div class="rate">$399.00</div>

                            <div class="description">@Html.Sitecore().Field("6 - Phone Warranty Text")</div>
                            <div class="rate">$9.95/mo</div>
                        </div>              

                        <div class="cart-product clearfix">
                            <h2>@Html.Sitecore().Field("6 - Monthly Plan Text")</h2>
                            <div class="description">
                                7.5 GB Included Data <br />
                                <a href="">@Html.Sitecore().Field("6 - Edit Plan Text")</a>
                            </div>
                            <div class="rate">$39/mo</div>
                        </div>                           
                    </div>
                    <div class="time">
                        <p><i class="icon-clock"></i>
                        @Html.Sitecore().Field("6 - Time Remaining Text").Format(new { time = "{{time()}}" })</p>
                    </div>
                </div>
            </article>
            <article class="enrollment__box">
                <header>
                    <p>@Html.Sitecore().Field("6 - Youll Need Header")</p>
                </header>
                <ul class="info">
                    <li><i class="icon-home"></i> @Html.Sitecore().Field("6 - Credit Card Text")</li>
                    <li><i class="icon-bill"></i>  @Html.Sitecore().Field("6 - Billing Address Text")</a></li>
                    <li><i class="icon-utility-provider"></i> @Html.Sitecore().Field("6 - IMEI Number Text") <br /> @Html.Sitecore().Field("6 - Bring Your Own Phone Text")</li>
                </ul>
            </article>
        </div>
    </aside>
</section>