<article class="thermostat grey-box">
    <header>
        <h3>@Html.Sitecore().Field("Header Text")</h3>
    </header>

    <div>
        <form>
            <div class="content">
                <div class="grid">
                    <div class="col">
                        <i class="icon-thermostat"></i>
                        <h5>@Html.Sitecore().Field("Thermostat Text")</h5>
                        <span class="current-temp">@Html.Sitecore().Field("Current Temperature")</span>
                    </div>
                    <div class="col">
                        <dl class="clearfix">
                            <dt>@Html.Sitecore().Field("Indoor Temperature")</dt>
                            <dd class="temperature">@Html.Sitecore().Field("Current Indoor Temperature")</dd>
                            <dt>@Html.Sitecore().Field("Mode")</dt>
                            <dd><a href="#">@Html.Sitecore().Field("Mode Option")</a></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <footer class="clearfix">
                <div class="online">
                    <p><i class="icon-online-light"></i> @Html.Sitecore().Field("Online Text")</p>
                </div>
                <div class="settings">
                    <p><a href="#">@Html.Sitecore().Field("Settings Text")</a></p>
                </div>
            </footer>
        </form>
    </div>
</article>