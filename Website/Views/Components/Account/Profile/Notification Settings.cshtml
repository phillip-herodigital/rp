                                    <div class="item">
                                        <div class="buttons">
                                            <button class="secondary">@Html.Sitecore().Field("Cancel Button Text")</button>
                                            <button>@Html.Sitecore().Field("Save Preference Button Text")</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="content-divider" />
                        <div class="edit-preferences">
                            <div class="item">
                                <ul class="checkbox-list">
                                    <li>
                                        <input type="checkbox" ng-model="formData.printedInvoices">
                                        <label>@Html.Sitecore().Field("Printed Invoices Text")</label>
                                    </li>
                                    <li>
                                        <input type="checkbox" ng-model="formData.promoOptIn">
                                        <label>@Html.Sitecore().Field("Promotional Offers Text")</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <footer>
                        <div class="buttons">
                            <button type="submit" class="buttons">@Html.Sitecore().Field("Save Button Text")</button>
                        </div>
                    </footer>
                </form>
            </article>
        </section>
    </section>
</div>
