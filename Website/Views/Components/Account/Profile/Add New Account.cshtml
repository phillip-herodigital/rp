@model StreamEnergy.MyStream.Models.Account.AddNewAccountRequest

<article class="grey-box account" ng-controller="AcctAddNewAccountCtrl">
    <header>
        <h2>@Html.Sitecore().Field("Add New Account Text")</h2>
    </header>
    <form ng-submit="addNewAccount()" data-val-bind-messages="validations">
        <div class="content">
            <p>@Html.Sitecore().Field("New Account Instructions Text")</p>
            <div class="group">
                <div class="item group-col" @Html.ValidationErrorClass(model => model.AccountNumber) @*float-label*@>
                    <label for="@Html.For(m => m.AccountNumber)">@Html.Sitecore().Field("Account Number Text")</label>
                    <input type="text" @Html.ValidationAttributes(m => m.AccountNumber) ng-model="formData.accountNumber" />
                    @Html.ValidationMessageFor(model => model.AccountNumber)
                </div>
                <div class="item group-col" @Html.ValidationErrorClass(model => model.SsnLastFour) @*float-label*@>
                    <label for="@Html.For(m => m.SsnLastFour)">@Html.Sitecore().Field("Last 4 Text")</label>
                    <input type="text" @Html.ValidationAttributes(m => m.SsnLastFour) ng-model="formData.ssnLastFour" />
                    @Html.ValidationMessageFor(model => model.SsnLastFour)
                </div>
            </div>
        </div>
        <footer>
            <div class="buttons">
                <button type="submit" data-val-submit>@Html.Sitecore().Field("Save Button Text")</button>
            </div>
        </footer>
    </form>
</article>

