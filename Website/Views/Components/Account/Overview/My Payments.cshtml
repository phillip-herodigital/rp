<article class="grey-box payment-history wrapper" ng-controller="AcctMyPaymentsCtrl">
    <header class="clearfix">
        <h2>@Html.Sitecore().Field("My Payments Text")</h2>
        <ul>
            <li><a href="#">@Html.Sitecore().Field("Autopay Settings Text")</a></li>
            <li><a href="#">@Html.Sitecore().Field("Payment Accounts Text")</a></li>
            <li><a href="#">@Html.Sitecore().Field("Status Source Help Text")</a></li>
        </ul>
    </header>

    <div class="content clearfix" loading-indicator>
        <div class="filters">
            <form>
                <div class="group">
                    <div class="item">
                        <label>@Html.Sitecore().Field("Service Type Text")</label>
                        <select ng-model="filters.serviceType" ng-options="item.value as item.name for item in filtersList.serviceType">
                            <option value="">All</option>
                        </select>
                    </div>
                    <div class="item">
                        <label>@Html.Sitecore().Field("Account Text")</label>
                        <select ng-model="filters.accountNumber" ng-options="item.value as item.name for item in filtersList.accountNumber">
                            <option value="">All</option>
                        </select>
                    </div>
                    <div class="item">
                        <label>@Html.Sitecore().Field("Status Text")</label>
                        <select ng-model="filters.status" ng-options="item.value as item.name for item in filtersList.status">
                            <option value="">All</option>
                        </select>
                    </div>
                    <div class="actions" ng-show="isFiltered()">
                        <p><a href="" ng-click="resetFilters()">@Html.Sitecore().Field("Reset Filters Text")</a></p>
                    </div>
                </div>
            </form>
        </div>

        <div class="stretch">
            <table grid-table ng-model="paymentsTable">
                <thead grid-table-header></thead>
                <tbody ng-repeat="item in table.valuesToShow">
                    <tr>
                        <td style="width:30px;" ng-click="expandInnerTable($index)" ng-class="{'opened': expand[$index], 'closed': !expand[$index]}">
                            <i ng-class="{'icon-arrow-expanded': expand[$index], 'icon-arrow-collapsed': !expand[$index]}"></i>
                        </td>
                        <td><i class="icon-recurring" ng-show="item.isRecurring"></i></td>
                        <td ng-show="showColumn('accountNumber')">{{ item.accountNumber }}</td>
                        <td ng-show="showColumn('serviceType')" ng-switch on="item.serviceType">
                            <i ng-switch-when="HomeLife Services" class="icon-homelife-services"></i>
                            <i ng-switch-when="Utility" class="icon-utility"></i>
                            {{ item.serviceType }}
                        </td>
                        <td ng-show="showColumn('confirmCode')">{{ item.confirmCode }}</td>
                        <td ng-show="showColumn('paymentAmount')">{{ item.paymentAmount }}</td>
                        <td ng-show="showColumn('paymentDate')">{{ item.paymentDate }}</td>
                        <td ng-show="showColumn('status')">{{ item.status }}</td>
                        <td ng-show="showColumn('action')">
                            <button class="secondary" ng-click="expandInnerTable($index)">Details</button>
                        </td>
                    </tr>       
                    <tr class="expand-details" ng-show="expand[$index] == true">
                        <td colspan="11">
                            <div class="grid clearfix">
                                <div class="col clearfix">
                                    <span class="label">
                                        <p><strong>@Html.Sitecore().Field("Payment ID Text")</strong></p>
                                        <p><strong>@Html.Sitecore().Field("Confirmation Code Text")</strong></p>
                                        <p><strong>@Html.Sitecore().Field("Payment Mode Text")</strong></p>
                                    </span>
                                    <span class="account-info">
                                        <p>{{ item.paymentID }}</p>
                                        <p>{{ item.confirmCode }}</p>
                                        <p>{{ item.paymentMode }}</p>
                                    </span>
                                </div>
                                <div class="col clearfix">
                                    <span class="label">
                                        <p><strong>@Html.Sitecore().Field("Payment Account Text")</strong></p>
                                        <p><strong>@Html.Sitecore().Field("Routing Transit Number Text")</strong></p>
                                        <p><strong>@Html.Sitecore().Field("Payment Made By Text")</strong></p>
                                    </span>
                                    <span class="account-info">
                                        <p>{{ item.paymentAccount }}</p>
                                        <p>{{ item.routingNumber }}</p>
                                        <p>{{ item.paymentMadeBy }}</p>
                                    </span>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot grid-table-pagination></tfoot>
            </table>
        </div>
    </div>
</article>
