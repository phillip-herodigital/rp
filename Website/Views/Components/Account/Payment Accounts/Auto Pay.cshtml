<div ng-controller="AutoPayCtrl">
	<article class="service-identification">
		<div class="content">
			<div class="account-selector stretch">
				<form>
					<div class="group">
						<div class="item">
							<label>Account Number:</label>
							<select>
								<option value="Please choose">1197015532</option>
								<option value="account1">Account 2</option>
							</select>
						</div>
					</div>
				</form>
			</div>
			<div class="service-address">
				<p>Service Address: 123 Main Street, Dallas, TX 75001</p>
			</div>
		</div>
	</article>
	<article class="grey-box payments pay5 pay4">
		<form>
			<div class="content">
					<div class="alert notice">
						@Html.Sitecore().Field("Notice Text")	
					</div>					
					<div class="payment-selection">
						<input type="radio" id="autopay-on" name="payment-type" ng-model="autoPay.status" ng-value="autoPayOn">
						<label for="autopay-on">@Html.Sitecore().Field("AutoPay On Label")</label>
					</div>
					<div class="payment-options" ng-show="autoPay.status == 'autoPayOn'">							
						<div class="group">
							<div class="item">
								<label for="">@Html.Sitecore().Field("Account Number Label")</label>
								<span>123456789</span>
							</div>
							<div class="item">
								<label for="">@Html.Sitecore().Field("Payment Account Label")</label>
								<select>
									<option>USAA Checking</option>
								</select>
							</div>
							<div class="item">
								<a class="single-link" href="">@Html.Sitecore().Field("Add New Payment Text")</a>
							</div>
						</div>
						<div slide-toggle>
							<a href="" ng-click="toggleSlide()" class="arrow-toggle" ng-class="{'collapsed': !isOpen}">Advanced Settings</a>
							<div class=" advanced-settings slide-toggle">
								<p>@Html.Sitecore().Field("Recurring Pay Text 1") 
									<input type="text" class="small" datepicker-popup is-open="datePickerOpened" ng-click="openDatePicker($event)" min-date="minDate" date-disabled="disableWeekends(date, mode)"> 
									@Html.Sitecore().Field("Recurring Pay Text 2") 
									<select>
										<option>until further notice</option>
									</select>
								</p>
								<p>@Html.Sitecore().Field("Schedule Pay Text 1") 
									<select>
										<option>automatic</option>
									</select>
									@Html.Sitecore().Field("Schedule Pay Text 2") 
									<select>
										<option>until my bill arrives</option>
									</select>
								</p>
							</div>
						</div>

					</div>
					<div class="payment-selection">
						<input type="radio" id="autopay-off" name="payment-type" ng-model="autoPay.status" ng-value="autoPayOff">
						<label for="autopay-off">@Html.Sitecore().Field("AutoPay Off Label")</label>
					</div>
			</div>
			<footer>
				<div class="buttons">
					<button type="submit" ng-click="save()">@Html.Sitecore().Field("Save Button Text")</button>
				</div>
			</footer>
		</form>
	</article>
</div>
