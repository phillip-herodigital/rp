<article class="grey-box payments">
	<header>
		<h2>@Html.Sitecore().Field("Header Text")</h2>
	</header>
	<form>
		<div class="content">
			@Html.Sitecore().Field("Body Text")

			<h3>@Html.Sitecore().Field("Bank Account Header Text")</h3>

			<div class="item">
				<label for="account-nickname">@Html.Sitecore().Field("Account Nickname Label"):</label>
				<input type="text" id="account-nickname">
			</div>										
			<div class="item">
				<label for="payment-method">@Html.Sitecore().Field("Account Type Label"):</label>
				<select id="payment-method">
					<option value="">Please Choose</option>
				</select>
			</div>

			<div class="group">
				<div class="item group-col">
					<label for="routing-number">@Html.Sitecore().Field("Routing Number Label"):</label>
					<input type="text" id="routing-number">
				</div>
				<div class="item group-col">
					<label for="account-number">@Html.Sitecore().Field("Account Number Label"):</label>
					<input type="text" id="account-number">
				</div>									
			</div>
			<p>@Html.Sitecore().Field("Bank Account Image")</p>
			<div class="item">
				<label for="description">@Html.Sitecore().Field("Description Label")</label>
				<textarea name="description" id="description" ></textarea>
			</div>									
		</div>
		<footer>
			<div class="buttons">
				<button type="submit">@Html.Sitecore().Field("Submit Button Text")</button>
				<button class="secondary">@Html.Sitecore().Field("Cancel Button Text")</button>
			</div>
		</footer>
	</form>
</article>
