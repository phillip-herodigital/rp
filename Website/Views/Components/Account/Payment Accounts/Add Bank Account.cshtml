@model StreamEnergy.MyStream.Models.Account.AddBankAccountRequest
<article class="grey-box payments" ng-controller="AddBankAccountCtrl">
	<header>
		<h2>@Html.Sitecore().Field("Header Text")</h2>
	</header>
    <form data-val-bind-messages="validations" ng-submit="addPaymentAccount()">
        <div class="content">
            <div class="item" @Html.Validation().ErrorClass(m => m.Nickname)>
                <label for="@Html.IdFor(m => m.Nickname)">@Html.Sitecore().Field("Account Nickname Label"):</label>
                @Html.TextBoxFor(m => m.Nickname, new { ng_model = "formData.nickname" })
                <span class="help-text">@Html.Sitecore().Field("Account Nickname Help Text")</span>
            </div>

            <div bank-account-payment="formData.bankAccount" data-val-if="true"></div>

            <div class="item" @Html.Validation().ErrorClass(m => m.Description)>
                <label for="@Html.IdFor(m => m.Description)">@Html.Sitecore().Field("Description Label")</label>
                @Html.TextAreaFor(m => m.Description, new { ng_model = "formData.description" })
            </div>

        </div>
        <footer>
            <div class="buttons">
                <button type="submit" data-val-submit>@Html.Sitecore().Field("Submit Button Text")</button>
                @Html.Sitecore().Field("Cancel Button Link")
            </div>
        </footer>
    </form>
</article>
