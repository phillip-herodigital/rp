<div class="support-search">
    <div class="content">
        
        <h1 ng-hide="subcategories.length">Stream Support Center</h1>
        <h1 ng-show="subcategories.length">{{category}} Support</h1>
        <h4>At Stream, we're here to help. Contact us if you can't find what you're looking for.</h4>
        <form class="search" ng-submit="search()">
            <div class="select clearfix" ng-click="dropDown=!dropDown">
                <div class="selected-category" ng-show="search.category">
                    In {{search.category.name}}<span ng-show="search.state"> - {{search.state.abbreviation}}</span>
                </div>
                <div class="selected-category" ng-hide="search.category" ng-cloak>Service Type</div>
                <div class="triangle-down" ng-class="{flipped: dropDown}"></div>
            </div>
            <div class="input">
                <input type="text" 
                       placeholder="search for something"
                       ng-model="search.text"
                       typeahead="faq.faqQuestion for faq in searchFAQs"/>
                <img class="mag-glass" src="/frontend/assets/i/mag-glass.png" />
            </div>
            <div ng-class="{reveal: dropDown}" class="category-dropdown-container">
                <ul class="category-dropdown">
                    <li ng-repeat="category in categories">
                        <div ng-click="selectCategory(category, null)" ng-class="{noHover: category.states.length}">
                            {{category.displayTitle}}<span ng-show="category.states.length"> (select state)</span>
                        </div>
                        <ul class="state" ng-show="category.states">
                            <li ng-repeat="state in category.states">
                                <div ng-click="selectCategory($parent.category, state)">{{state.state}}</div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</div>
<nav class="tertiary-nav" ng-if="subcategories.length" ng-cloak>
    <div class="wrapper">
        <ul ng-style="{'margin-left': true}">
            <li ng-repeat="subcategory in subcategories" ng-class="{selected: subcategory.selected}"><a href="" ng-click="selectSubcategory($index)">{{subcategory.displayTitle}}</a></li>
        </ul>
    </div>
</nav>