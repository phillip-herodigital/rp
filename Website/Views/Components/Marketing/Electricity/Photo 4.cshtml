@{
    Sitecore.Data.Fields.ImageField background = Html.Sitecore().CurrentItem.Fields["Background Image"];
    var mediaOptions = new Sitecore.Resources.Media.MediaUrlOptions { AlwaysIncludeServerUrl = true };
}

<article class="electricity-photo photo-4" style="background-image: url(@Sitecore.Resources.Media.MediaManager.GetMediaUrl(background.MediaItem, mediaOptions))">
    <div class="background">
        <div class="content">
            <h2>@Html.Sitecore().Field("Header")</h2>
            <p>@Html.Sitecore().Field("Content")</p>
            <p>@Html.Sitecore().Field("Button")</p>
        </div>
    </div>
</article>