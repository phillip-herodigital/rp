@{
    Sitecore.Data.Fields.ImageField background_image = Html.Sitecore().CurrentItem.Fields["Background Image"];
    var mediaOptions = new Sitecore.Resources.Media.MediaUrlOptions { AlwaysIncludeServerUrl = true };
}

<article class="electricity-photo photo-2" style="background-image: url('@Sitecore.Resources.Media.MediaManager.GetMediaUrl(background_image.MediaItem)')">
    <div class="content">
        <h2>@Html.Sitecore().Field("Header")</h2>
        <p class="quote">@Html.Sitecore().Field("Quote")</p>
        <p>@Html.Sitecore().Field("Button")</p>
    </div>
</article>