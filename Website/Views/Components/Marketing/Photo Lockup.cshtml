@{
    var sc = Html.Sitecore();
   
    var classes = new List<string>();

    if (sc.CurrentItem.IsChecked("Image on Right") ?? false)
    {
        classes.Add("right-img");
    }

    classes.Add(sc.LookupItem("Background Color").SafeFieldValue("CSS Class").Prefix("bg-"));
    classes.Add(sc.LookupItem("Accent Color").SafeFieldValue("CSS Class").Prefix("accent-"));

    classes.Add(sc.LookupItem("Border Color").SafeFieldValue("CSS Class").Prefix("border border-"));
    classes.Add(sc.CurrentItem["Custom Css Class"]);
    classes.Add(sc.LookupItem("Background Image Position").SafeFieldValue("CSS Class"));
    var id = !string.IsNullOrEmpty(sc.CurrentItem["Custom ID"]) ? " id=\"" + sc.CurrentItem["Custom ID"] + "\"" : "";
}
<article @Html.Raw(id) class="marketing photoLockup @string.Join(" ", classes)">
    <div class="photo" style="@Html.AsBackgroundStyle("Background Image")">
        @{
            if (Sitecore.Context.PageMode.IsPageEditorEditing)
            {
                @Html.Sitecore().Field("Background Image")
            }
        }
    </div>
    <div class="text">
        <div class="inner">
            @{
                if (!string.IsNullOrEmpty(Html.Sitecore().Field("Header").ToString()))
                {
                    <h2>@Html.Sitecore().Field("Header")</h2>
                }
            }
            @{
                if (!string.IsNullOrEmpty(Html.Sitecore().Field("Sub Header").ToString()))
                {
                    <h3>@Html.Sitecore().Field("Sub Header")</h3>
                }
            }
            @{
                if (!string.IsNullOrEmpty(Html.Sitecore().Field("Quote").ToString()))
                {
                    <blockquote>
                        <div>@Html.Sitecore().Field("Quote")</div>
                    </blockquote>
                }
            }
            @{
                if (!string.IsNullOrEmpty(Html.Sitecore().Field("Citation").ToString()))
                {
                    <p class="cite">&mdash; @Html.Sitecore().Field("Citation")</p>
                }
            }
            @{
                if (!string.IsNullOrEmpty(Html.Sitecore().Field("Content").ToString()))
                {
                    @Html.Sitecore().Field("Content")
                }
            }
            @Html.Sitecore().Field("Button")
        </div>
    </div>
</article>