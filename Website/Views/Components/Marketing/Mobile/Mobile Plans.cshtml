<article class="marketing marketingIntro mobile mobile-pricing-plans">
    <div class="wrapper">
        @if (Html.Sitecore().HasValue("Heading"))
        {
            <h1>@Html.Sitecore().Field("Heading")</h1>
        }
        @if (Html.Sitecore().HasValue("Intro"))
        {
            @Html.Sitecore().Field("Intro")
        }
        <div class="overview grid">
            <div class="col">
                <h2><img alt="Stream" src="/frontend/assets/i/marketing/redesign/stream_logo.png"> <span>powered by: <strong>AT&amp;T</strong></span></h2>
                <div class="grid">
                    <div class="indvidualPlans col" ng-if="@Html.Sitecore().Field("Show ATT Individual Plans") == true">
                        <h3>@Html.Sitecore().Field("Individual Plans")</h3>
                        @Html.Sitecore().Field("ATT Individual Plan Description")
                        <p>
                            <a class="button" href="">@Html.Sitecore().Field("Button - Get Started")</a>
                        </p>
                        <p>@Html.Sitecore().Field("ATT Individual More Details")</p>
                    </div>
                    <div class="groupPlans col" ng-if="@Html.Sitecore().Field("Show ATT Group Plans") == true">
                        <h3>@Html.Sitecore().Field("Group Plans")</h3>
                        @Html.Sitecore().Field("ATT Group Plan Description")
                        <p>
                            <a class="button" href="">@Html.Sitecore().Field("Button - Get Started")</a>
                        </p>
                        <p>@Html.Sitecore().Field("ATT Group More Details")</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <h2><img alt="Stream" src="/frontend/assets/i/marketing/redesign/stream_logo.png"> <span>powered by: <strong>Sprint</strong></span></h2>
                <div class="grid">
                    <div class="indvidualPlans col" ng-if="@Html.Sitecore().Field("Show Sprint Individual Plans") == true">
                        <h3>@Html.Sitecore().Field("Individual Plans")</h3>
                        @Html.Sitecore().Field("Sprint Individual Plan Description")
                        <p>
                            <a class="button" href="">@Html.Sitecore().Field("Button - Get Started")</a>
                        </p>
                        <p>@Html.Sitecore().Field("Sprint Individual More Details")</p>
                    </div>
                    <div class="groupPlans col" ng-if="@Html.Sitecore().Field("Show Sprint Group Plans") == true">
                        <h3>@Html.Sitecore().Field("Group Plans")</h3>
                        @Html.Sitecore().Field("Sprint Group Plan Description")
                        <p>
                            <a class="button" href="">@Html.Sitecore().Field("Button - Get Started")</a>
                        </p>
                        <p>@Html.Sitecore().Field("Sprint Group More Details")</p>
                    </div>
                </div>
            </div>
        </div>
