@{
    var sc = Html.Sitecore();
    var logostyle = "display:block; border:none; outline:none; text-decoration:none;";
    Sitecore.Data.Fields.ImageField logo = sc.CurrentItem.Fields["Logo"];
    Sitecore.Data.Fields.ImageField headerBg = sc.CurrentItem.Fields["Header Background"];
}

<table width="100%" bgcolor="#e2e1df" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="header">
    <tbody>
        <tr>
            <td>
                <table width="600" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                    <tbody>
                        <tr>
                            <td width="100%">
                                <!--[if gte mso 9]>
                                    <v:background xmlns:v="urn:schemas-microsoft-com:vml" fill="t">
                                    <v:fill type="tile" src="@Sitecore.Resources.Media.MediaManager.GetMediaUrl(headerBg.MediaItem)" color="#00a8e1"/>
                                    </v:background>
                                <![endif]-->
                                <table width="600" bgcolor="#00a8e1" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                                    <tbody>
                                        <tr>
                                            <td valign="top" align="left" background="@Sitecore.Resources.Media.MediaManager.GetMediaUrl(headerBg.MediaItem)">
                                                <!-- spacing -->
                                                <table width="20" align="left" border="0" cellpadding="0" cellspacing="0" class="devicewidth">
                                                    <tbody>
                                                        <tr>
                                                            <td align="center" style="font-size:1px; line-height:1px;">&nbsp;</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <!-- end of spacing -->
                                                <!-- logo -->
                                                <table width="160" align="left" border="0" cellpadding="0" cellspacing="0" class="devicewidth">
                                                    <tbody>
                                                        <tr>
                                                            <td width="152" height="70" align="center">
                                                                <div class="imgpop">
                                                                    <a target="_blank" href="http://mystream.com/">
                                                                        <img src="@Sitecore.Resources.Media.MediaManager.GetMediaUrl(logo.MediaItem)" alt="" border="0" width="@logo.Width" height="@logo.Height" style="@logostyle">
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <!-- end of logo -->
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>
