@{
    var mobileSettings = Sitecore.Context.Database.GetItem("/sitecore/content/Data/Settings/Mobile Enrollment Options");
    var showSprint = !String.IsNullOrEmpty(mobileSettings.Fields["Sprint Buy Phone"].Value) || !String.IsNullOrEmpty(mobileSettings.Fields["Sprint BYOD"].Value);
}

<script src="//maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>

<div class="wrapper">
    <article class="coverage-map" ng-controller="CoverageMapCtrl">

        <div class="form">
            <script type="text/ng-template" id="searchbox.tpl.html">
                <input type="text" id="gmap-search-input" placeholder="" />
            </script>

            <div class="item">
                <label for="gmap-search-input">@Html.Sitecore().Field("Enter Zip Code")</label>
                <div id="gmap-search"></div>
            </div>
        </div>

        <ui-gmap-google-map center="map.center" zoom="map.zoom" options="map.options" events="map.events">
            <ui-gmap-search-box template="searchbox.template" events="searchbox.events" parentdiv="'gmap-search'"></ui-gmap-search-box>
        </ui-gmap-google-map>

        <ul class="layer-toggle">
            <li>
                <span class="layer-legend voice"></span> <input type="checkbox" id="sprint_voice" ng-model="layers.sprint.sprint_voice_roam" /> <label for="sprint_voice">@Html.Sitecore().Field("Voice")</label>
            </li>
            <li>
                <span class="layer-legend data"></span> <input type="checkbox" id="sprint_data" ng-model="layers.sprint.sprint_data_roam" /> <label for="sprint_data">@Html.Sitecore().Field("Data")</label>
            </li>
            <li>
                <span class="layer-legend lte"></span> <input type="checkbox" id="sprint_lte" ng-model="layers.sprint.sprint_lte" /> <label for="sprint_lte">@Html.Sitecore().Field("LTE")</label>
            </li>
        </ul>
    </article>
</div>