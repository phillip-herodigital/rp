@model Sitecore.Social.Client.Mvc.Areas.Social.Models.LoginViewModel

@using (Html.BeginForm("Login", null, new { area = "Social" }, FormMethod.Post, new { style = "display:inline" }))
{
  @Html.HiddenFor(model => model.Parameters)

  <input type="image" title='@Model.ToolTip' style="margin-left: 1px; margin-right: 1px;" src="@Url.Content(Model.Icon)" />
}