@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-DBBrowserEditor";
  rendering.Requires.Script("client", "DBBrowserEditor.js");

  rendering.AddBinding("items", "DataSource.items");

  var htmlAttributes = rendering.HtmlAttributes;
} 
<div @htmlAttributes>

  <table id="DBBrowserEditor">
    <tr>
      <td colspan="2">
      <div id="header">
        <img data-bind="attr: { src: item() != null ? item().$mediaurl : '' } " alt="" />
        <span data-bind="text: item() != null ? item().$path : ''"></span>
      </div>     
      </td>
    </tr>
    <tbody data-bind="foreach: fields">
      <tr>
        <td class="table-column-label" data-bind="text: fieldName"></td>
        <td class="table-column-value"><input type="text" data-bind="value: value"/></td>
      </tr>
    </tbody>
  </table>
</div>
