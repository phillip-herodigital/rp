@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using Sitecore.Web.UI.Controls
@using Sitecore.Web.UI.Controls.Common.Buttons
@model RenderingModel
                  

<h3>Apperance</h3>
<p>
    DropDownButtons can be enabled or disabled. Only use a Primary ToggleButton when there is single logical action.
    DropDownButtons content is set by assigning content to the DropDownControlId.Content placeholder.
</p>

<table class="table">
    <thead>
        <tr>
            <th style="width:33%">Regular DropDownButton</th>
            <th style="width:33%">Disabled DropDownButton</th>
            <th>Primary DropDownButton</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.Sitecore().Controls().DropDownButton("DropDownButton1", new { Text = "Click Me" })</td>
            <td>@Html.Sitecore().Controls().DropDownButton("DropDownButton2", new { Text = "Disabled", IsEnabled = false })</td>
            <td>@Html.Sitecore().Controls().DropDownButton("DropDownButton3", new { Text = "Primary button", ButtonType = "Primary" })</td>
            
        </tr>
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th style="width:33%">Invisible DropDownButton</th>
            <th style="width:33%">ImageUrl</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.Sitecore().Controls().DropDownButton("DropDownButton4", new { Text = "Click Me", IsVisible = false })</td>
            <td>@Html.Sitecore().Controls().DropDownButton("DropDownButton5", new { Text = "Click Me", ImageUrl="/sitecore/shell/client/Speak/Assets/img/sc-sprite.png", BackgroundPosition="-32px -34px" })</td>
            <td></td>
        </tr>
    </tbody>
</table>

