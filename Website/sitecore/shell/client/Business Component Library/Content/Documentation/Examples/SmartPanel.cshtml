<p>
    @Html.Sitecore().Controls().Button("TextBox1", new { Text = "Open bottom panel", Trigger ="open:SmartPanel3" })                                        
    @Html.Sitecore().Controls().Rendering(this.Html, rendering, "SmartPanel3", "/sitecore", new { Dimensions = "Normal", Position="Bottom"})    
</p>

<pre>
