@using Sitecore.Data
@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using Sitecore.Web.UI.Controls.Common.Buttons
@using Sitecore.Web.UI.Controls.Common.Renderings
@model RenderingModel    
@{
    var rendering = new ID("{054CA6D7-125D-46D0-957C-D38A26190274}").ToString();
}

<h3>Apperance</h3>
<p>
    A panel that can be opened or closed. When opened it shows with a sliding animation.
    It can be positioned to Top, Left, Bottom, Right.
    The dimensions (width in Left/Right position, height in Top/Bottom position) can be selected between 3 fixed sizes Small/Normal/Large.
</p>
<h4>Right Panel Large size</h4>
<p>
    @Html.Sitecore().Controls().Button("TextBox1", new { Text = "Open right panel", Trigger ="open:SmartPanel1" })                                        
    @Html.Sitecore().Controls().Rendering(this.Html, rendering, "SmartPanel1", "/sitecore", new { Dimensions = "Large", Position="Right", OffsetBottom=0, OffsetTop=0 })    
</p>

<pre>
  &#64;Html.Sitecore().Controls().Button("TextBox1", new { Text = "Open right panel", Trigger ="open:SmartPanel2" })
  &#64;Html.Sitecore().Controls().Rendering(this.Html, rendering, "SmartPanel1", "/sitecore", new { Dimensions = "Large", Position="Right", OffsetBottom=0, OffsetTop=0  })
</pre>

<h4>Right Panel with offset and small size</h4>
<p>
    @Html.Sitecore().Controls().Button("TextBox1", new { Text = "Open right panel with top and bottom offset", Trigger ="open:SmartPanel2" })
    @Html.Sitecore().Controls().Button("TextBox1", new { Text = "Close right panel with top and bottom offset", Trigger ="close:SmartPanel2" })
    @Html.Sitecore().Controls().Rendering(this.Html, rendering, "SmartPanel2", "/sitecore", new { Dimensions = "Small", Position="Right", OffsetBottom=100, OffsetTop=200 })    
</p>

<pre>
  &#64;Html.Sitecore().Controls().Button("TextBox1", new { Text = "Open right panel" , Trigger ="open:SmartPanel2"})
  &#64;Html.Sitecore().Controls().Rendering(this.Html, rendering, "SmartPanel2", "/sitecore", new { Dimensions = "Large", Position="Right", OffsetBottom=100, OffsetTop=200  })
</pre>

