@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.TextAreas
@using Sitecore.Web.UI.Controls.Common.Texts
@model RenderingModel

<h3>Apperance</h3>
<p>
  Empty text area.
</p>
@Html.Sitecore().Controls().TextArea("TextArea1")
<pre>
&#64;Html.Sitecore().Controls().TextArea("TextArea1")
</pre>
<p>
  Text area with watermark.
</p>              
@Html.Sitecore().Controls().TextArea("TextArea2", new { Columns = 80, Rows = 25, Watermark = "Text" })
<pre>
&#64;Html.Sitecore().Controls().TextArea("TextArea2", new { Columns = 80, Rows = 25, Watermark = "Text" })
</pre>
<p>
  Text area with default text.
</p>              
@Html.Sitecore().Controls().TextArea("TextArea3", new { Columns = 80, Rows = 25,  Text = "Lorem Ipsum" })
<pre>
&#64;Html.Sitecore().Controls().TextArea("TextArea3", new { Columns = 80, Rows = 25,  Text = "Lorem Ipsum" })
</pre>
<h3>Data Binding</h3>
<p>
  Data bind to the text area. Press Tab in the Text Area to update the text.
</p>              
@Html.Sitecore().Controls().TextArea("TextArea4", new { Columns = 80, Rows = 25,  Text = "Lorem Ipsum" })
@Html.Sitecore().Controls().Text("Text1", "", new { Text = "{Binding TextArea4.text}" })

<pre>
&#64;Html.Sitecore().Controls().TextArea("TextArea4", new { Columns = 80, Rows = 25,  Text = "Lorem Ipsum" })
&#64;Html.Sitecore().Controls().Text("Text1", "", new { Text = "{Binding TextArea4.text}" })
</pre>
