@using Sitecore.Mvc
@using Sitecore.PathAnalyzer.Client.Sitecore.Shell.Client.Applications.PathAnalyzer.Common.Layouts.Renderings.Shared
@using Sitecore.PathAnalyzer.Localization
@using Sitecore.Web.UI.Controls.Common.UserControls
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var userControl = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    userControl.Class = "sc-legend";
    userControl.DataBind = "visible: isVisible";
    userControl.Requires.Script("pathanalyzer", "legend.js");

    var htmlAttributes = userControl.HtmlAttributes;

    var resourceHelper = new Helper();
}
<div @htmlAttributes>
    <div id="legend" class="legendWrapper">
        <h3>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendValueHeader)</h3>
        <p>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendValueDescription)</p>
        <span class="circle circleSize8"></span><span class="circle circleSize16"></span><span class="circle circleSize24"></span>
        <hr />
        <h3>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendVisitsHeader)</h3>
        <p>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendVisitsDescription)</p>
        <span class="line lineSize4"></span><span class="line lineSize8"></span><span class="line lineSize16"></span>
        <hr />
        <h3>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendValuePerVisitHeader)</h3>
        <p>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendValuePerVisitDescription1)</p>
        <p>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendValuePerVisitDescription2)</p>
        <p><span class="square sq11"></span>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendGreen)</p>
        <p><span class="square sq1"></span>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendRed)</p>
        <div class="legendColors">
            <span class="square sq1"></span>
            <span class="square sq2"></span>
            <span class="square sq3"></span>
            <span class="square sq4"></span>
            <span class="square sq5"></span>
            <span class="square sq6"></span>
            <span class="square sq7"></span>
            <span class="square sq8"></span>
            <span class="square sq9"></span>
            <span class="square sq10"></span>
            <span class="square sq11"></span>
        </div>
        <div class="legendLabels"><span>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendLow)</span><span>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendAverage)</span><span>@resourceHelper.GetTextValue(PathAnalyzerTexts.LegendHigh)</span></div>
    </div>
</div>
