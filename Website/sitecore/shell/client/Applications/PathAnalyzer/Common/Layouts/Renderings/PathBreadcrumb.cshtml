@using Sitecore.Mvc
@using Sitecore.PathAnalyzer.Localization
@using Sitecore.Web.UI.Controls.Common.UserControls
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var userControl = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    userControl.Class = "sc-pathbreadcrumb";
    userControl.DataBind = "visible: isVisible";
    userControl.Requires.Script("pathanalyzer", "pathbreadcrumb.js");

    var htmlAttributes = userControl.HtmlAttributes;

    var resourceManager = new ResourceManager();
}
<div @htmlAttributes>
    <div id="breadcrumb">
        <ol class="breadcrumb">
            <li>@resourceManager.Translate(PathAnalyzerTexts.PleaseSelectAPath)</li>
        </ol>
    </div>
</div>
