@using Sitecore
@using Sitecore.Modules.EmailCampaign.Core
@using Sitecore.Mvc  
@using Sitecore.Web.UI.Controls.Common.UserControls
@using Sitecore.Web.UI.Controls.Common.Renderings
@using Constants = EmailCampaign.Controls.Constants
@using UserControl = Sitecore.Web.UI.Controls.Common.UserControls.UserControl

@model Sitecore.EmailCampaign.Controls.ManagerRootSwitcher.ManagerRootSwitcherViewModel
@{
    UserControl rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    string alignment = rendering.GetString("ContentAlignment").ToLower();
}

<div @Model.HtmlAttributes data-sc-hasnested="true">
  @(this.Html.Sitecore().Controls().Rendering(Model.Html, Constants.Renderings.Bcl.DropDownButton, Model.ControlId + "DropDownButton", "", new { tooltip = @ClientHost.Globalization.Translate(EcmTexts.ChangeRootManager), contentAlignment = @alignment.Length > 0 ? @alignment : "right" }))
</div>