@using Sitecore.Mvc
@using Sitecore.Web.UI.Controls.Common.Renderings
@using Bcl = EmailCampaign.Controls.Constants.Renderings.Bcl

@model Sitecore.EmailCampaign.Controls.LanguageSwitcher.LanguageSwitcherViewModel

<div @Model.HtmlAttributes data-sc-hasnested="true">
  @(this.Html.Sitecore().Controls().Rendering(Model.Html, Bcl.DropDownButton, Model.ControlId + "DropDownButton", "", new { text = Model.DisplayName, tooltip = Model.CurrentLanguageToolTip, contentAlignment = "right" }))
</div>
