<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <PopupChrome def:inherits="Sitecore.Shell.Controls.Windows.PopupChromeXmlControl,Sitecore.Client">           
    <Script Src="/sitecore/shell/controls/Windows.js"/>
    <GridPanel Width="$Width" Height="$Height" Background="white">
                        
      <Border Height="2px" Class="scGrayGradientLightShadow" Style="border-top:1px solid #232323" GridPanel.Width="100%" GridPanel.Height="2px"><Space/></Border>
      
      <Border Height="2px" Class="scGrayGradient" GridPanel.Height="2px"><Space/></Border>
      
      <Border Style="border-left:1px solid #232323; border-right:1px solid #232323; height:16px">
        <Border Class="scGrayGradient" Style="border-left:1px solid #848484; border-right:1px solid #848484" Align="right">
          <ImageButton Src="Images/CloseWindow16x16.png" Width="16" Height="16" Alt="Close" Click="javascript:scForm.browser.closePopups()"/>
        </Border>
      </Border>

      <Border Height="100%" Style="border:1px solid #232323; border-top:none" GridPanel.Height="100%" GridPanel.VAlign="top">
            <def:Placeholder />
      </Border>
      
    </GridPanel>
  </PopupChrome>
</control>
