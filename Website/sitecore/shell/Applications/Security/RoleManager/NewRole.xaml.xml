<?xml version="1.0" encoding="UTF-8" ?>
<xamlControls
  xmlns:x="http://www.sitecore.net/xaml"
  xmlns:ajax="http://www.sitecore.net/ajax"
  xmlns:rest="http://www.sitecore.net/rest"
  xmlns:r="http://www.sitecore.net/renderings"
  xmlns:xmlcontrol="http://www.sitecore.net/xmlcontrols"
  xmlns:p="http://schemas.sitecore.net/Visual-Studio-Intellisense"
  xmlns:asp="http://www.sitecore.net/microsoft/webcontrols"
  xmlns:html="http://www.sitecore.net/microsoft/htmlcontrols"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <Sitecore.Shell.Applications.Security.RoleManager.NewRole x:inherits="Sitecore.Shell.Applications.Security.RoleManager.NewRolePage,Sitecore.Client">
    <Sitecore.Controls.DialogPage Header="New Role" Icon="People/32x32/users4.png" Text="Create a new role." runat="server">
      <AjaxScriptManager runat="server"/>
      <ContinuationManager runat="server" />

      <div style="padding:0px 0px 0px 0px">
        <Literal Text="The role name can only contain the following characters: A-Z, a-z, 1-9 and space." runat="server"/>
      </div>

      <div style="padding:8px 0px 0px 0px">
        <Literal Text="Role Name:" runat="server"/>
      </div>

      <div style="padding:4px 0px 0px 0px">
        <asp:TextBox ID="Name" Width="100%" runat="server"/>
      </div>

      <div style="padding:8px 0px 0px 0px">
        <Literal Text="Domain:" runat="server"/>
      </div>

      <div style="padding:4px 0px 0px 0px">
        <asp:DropDownList ID="Domain" Width="100%" runat="server"/>
      </div>

    </Sitecore.Controls.DialogPage>
  </Sitecore.Shell.Applications.Security.RoleManager.NewRole>
</xamlControls>
