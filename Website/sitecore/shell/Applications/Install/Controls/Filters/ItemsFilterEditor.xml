<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition">
  <Installer.ItemsFilterEditor def:inherits="Sitecore.Shell.Applications.Install.Controls.ItemsFilterEditor,Sitecore.Client">
    <Border Height="100%" Padding="$Padding" Style="$Style" Class="$Class">
      <GridPanel Width="100%" Columns="1" Height="100%">
        <Scrollbox Height="100%" GridPanel.Height="100%" GridPanel.Width="100%" Class="scScrollbox scFixSize4 scFixSize12 scFixSizeInitialized" Background="transparent" Border="none" Padding="0">
          <GridPanel Width="100%" Columns="1" Height="50">
            <Border Padding="0px 0px 20px 0px">
              <Literal Text="Item name filter" />
              <Groupbox Padding="5px 0px 5px 0px">
                <Installer.ItemNameFilterEditor def:ID="nameFilter"/>
              </Groupbox>
            </Border>
          </GridPanel>

          <GridPanel Width="100%" Columns="1" Height="80">
            <Border Padding="0px 0px 20px 0px">
              <Literal Text="Creation date filter" />
              <Groupbox Padding="5px 0px 5px 0px">
                <Installer.ItemDateFilterEditor def:ID="cdateFilter" DateFilterType="CreatedFilter"/>
              </Groupbox>
            </Border>
          </GridPanel>

          <GridPanel Width="100%" Columns="1" Height="80">
            <Border Padding="0px 0px 20px 0px">
              <Literal Text="Modification date filter" />
              <Groupbox Padding="5px 0px 5px 0px">
                <Installer.ItemDateFilterEditor def:ID="mdateFilter" DateFilterType="ModifiedFilter"/>
              </Groupbox>
            </Border>
          </GridPanel>

          <GridPanel Width="100%" Columns="1" Height="50">
            <Border Padding="0px 0px 20px 0px">
              <Literal Text="Publish date filter" />
              <Groupbox Padding="5px 0px 5px 0px">
                <Installer.ItemPublishFilterEditor def:ID="pubFilter"/>
              </Groupbox>
            </Border>
          </GridPanel>

          <GridPanel Width="100%" Columns="1" Height="80">
              <Border Padding="0px 0px 20px 0px">
                 <Literal Text="Template filter" />
                 <Groupbox Padding="5px 0px 5px 0px">
                    <Installer.ItemTemplateFilterEditor def:ID="templFilter"/>
                 </Groupbox>
              </Border>
           </GridPanel>

           <GridPanel Width="100%" Columns="1" Height="80">
              <Border Padding="0px 0px 20px 0px">
                 <Literal Text="Created by filter" />
                 <Groupbox Padding="5px 0px 5px 0px">
                    <Installer.ItemUserFilterEditor def:ID="cuserFilter" FilterType="Created"/>
                 </Groupbox>
              </Border>
           </GridPanel>

           <GridPanel Width="100%" Columns="1" Height="80">
              <Border Padding="0px 0px 20px 0px">
                 <Literal Text="Updated by filter" />
                 <Groupbox Padding="5px 0px 5px 0px">
                    <Installer.ItemUserFilterEditor def:ID="muserFilter" FilterType="Modified"/>
                 </Groupbox>
              </Border>
           </GridPanel>

           <GridPanel Width="100%" Columns="1" Height="80">
              <Border Padding="0px 0px 20px 0px">
                 <Literal Text="Language filter" />
                 <Groupbox Padding="5px 0px 5px 0px">
                    <Installer.ItemLanguageFilterEditor def:ID="laFilter"/>
                 </Groupbox>
              </Border>
           </GridPanel>
        </Scrollbox>
      </GridPanel>
    </Border>
  </Installer.ItemsFilterEditor>
</control>