<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition">
   <Installer.ItemPublishFilterEditor def:inherits="Sitecore.Shell.Applications.Install.Controls.ItemPublishFilterEditor,Sitecore.Client">
      <div class="filterEditorChildContainer">
        <GridPanel Columns="2">
           <Literal Text="Publish date: "  GridPanel.Style ="white-space:nowrap;"/>
           <DatePicker def:ID="PublishDate" GridPanel.Width="100%" Width="150px" GridPanel.Align="left"  />
           <Checkbox def:ID="CheckWorkflow" Header="Take workflow into account" Checked="true" GridPanel.colspan="2" />
        </GridPanel>
        <Button def:ID="ClearButton" Header="Clear Filter" GridPanel.Align="right" GridPanel.Valign="Top"/>
      </div>
   </Installer.ItemPublishFilterEditor>
</control>

      