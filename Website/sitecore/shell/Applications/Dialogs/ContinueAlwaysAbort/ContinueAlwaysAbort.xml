<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <ContinueAlwaysAbort>
    <FormPage Background="threedface">
      <CodeBeside Type="Sitecore.Shell.Applications.Dialogs.ContinueAlwaysAbort,Sitecore.Client"/>

      <GridPanel Width="100%" Height="100%">
        <GridPanel Columns="2" Width="100%" GridPanel.Height="100%" GridPanel.Valign="top">

          <ThemedImage Src="Applications/32x32/Warning.png" Width="32" Height="32" Margin="8px 0px 8px 16px" GridPanel.Valign="top"/>

          <Border Padding="8px 16px 8px 8px" GridPanel.Width="100%">
            <Literal ID="Text"/>
          </Border>

        </GridPanel>

        <Border Align="Center" Padding="16px 8px 8px 8px">
          <Button Click="Continue" Header="Continue" Margin="0px 4px 0px 0px" Style="width:100px;" />
          <Button Click="ContinueAlways" Header="Continue Always" Margin="0px 4px 0px 0px" Style="width:100px;"/>
          <Button Click="Abort" Header="Abort" Margin="0px 4px 0px 0px" Style="width:100px;" />
        </Border>
      </GridPanel>

    </FormPage>
  </ContinueAlwaysAbort>
</control>