<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <Recalculate>
    <FormPage Background="threedface">
      <CodeBeside Type="Sitecore.Shell.Applications.Analytics.Personalization.RecalculateForm,Sitecore.Client"/>

      <GridPanel Width="100%" Height="100%">
        <GridPanel Columns="2" Width="100%" GridPanel.Height="100%" GridPanel.Valign="top">

          <ThemedImage Src="Applications/32x32/Warning.png" Width="32" Height="32" Margin="8px 0px 8px 16px" GridPanel.Valign="top"/>

          <Border Padding="8px 16px 8px 8px" GridPanel.Width="100%">
            <Border Style="font:bold 9pt Tahoma;">
              <Literal ID="Text" Text="The sum on the profile card percentages is not equal to 100%."/>
            </Border>
            <Border Padding="8px 0 0 0">
              <Literal Text="Change the profile card percentages or click Recalculate to change the values proportionally."/>
            </Border>
          </Border>

        </GridPanel>

        <Border Align="Right" Padding="16px 8px 8px 8px">
          <Button Click="Recalculate" Header="Recalculate" Margin="0px 4px 0px 0px"/>
          <Button Click="Cancel" Header="Cancel" Margin="0px 4px 0px 0px"/>
        </Border>
      </GridPanel>

    </FormPage>
  </Recalculate>
</control>

