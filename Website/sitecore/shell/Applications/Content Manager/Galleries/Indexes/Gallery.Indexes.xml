<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense" xmlns:shell="http://www.sitecore.net/shell">
  <Gallery.Indexes>
    <Gallery>
      <CodeBeside Type="Sitecore.ContentSearch.Client.Galleries.IndexesGallery,Sitecore.ContentSearch.Client"/>

      <Stylesheet Key="GalleryIndexes">
        .scMenuPanelItem, .scMenuPanelItem_Hover, .scMenuPanelItemSelected_Hover, .scMenuPanelItemSelected {
        padding-left: 0;
        padding-right: 0;
        }
      </Stylesheet>

      <GridPanel Width="100%" Height="100%">

        <GalleryMenu ID="Options" GridPanel.Height="100%" GridPanel.VAlign="top">

          <MenuPanel Height="100%">
            <Scrollbox ID="Indexes" Class="scScrollbox scFixSize" Height="100%" Background="#F4F4F5" Padding="0px" Border="none"/>
          </MenuPanel>

        </GalleryMenu>

        <GalleryMenuLine GridPanel.Height="2" />

        <Gallery.Grip GridPanel.Height="10"/>
        
      </GridPanel>
      
    </Gallery>
  </Gallery.Indexes>
</control>
