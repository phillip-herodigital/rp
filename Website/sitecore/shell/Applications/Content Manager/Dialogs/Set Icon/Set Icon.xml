<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <SetIcon>
    <FormDialog Icon="Core2/32x32/smiley_face2.png" Header="Icon" Submittable="false" Text="Assign an icon to the item.">

      <CodeBeside Type="Sitecore.Shell.Applications.ContentManager.Dialogs.SetIcon.SetIconForm,Sitecore.Client"/>
      <Script Src="/sitecore/shell/Applications/Content Manager/Dialogs/Set Icon/SetIcon.js" />
      <Stylesheet>
        .ie #RecentList, .ie #List .scScrollbox
        {
          width: 100% !important;
        }
        
        .scRecentIcon
        {
          cursor: pointer;
          margin: 4px;
        }
      </Stylesheet>
      <GridPanel Width="100%" Height="100%" Fixed="true">
        <VerticalTabstrip ID="TabStrip" GridPanel.Height="100%" Height="100%" FixSize="true">

		
          <Tab ID="Recent" Header="Recent">
            <GridPanel Width="100%" Height="100%" Fixed="true">
              <Scrollbox ID="RecentList" Class="scScrollbox scFixSize scFixSize8 scKeepFixSize" Height="100%" GridPanel.Height="100%" Border="none" Click="javascript:scClick(this,event)"/>
            </GridPanel>
          </Tab>

          <Tab ID="Icons" Header="Icons">
            <GridPanel Width="100%" Height="100%" Fixed="true">

              <Border Padding="8px 8px 12px 8px">
          <Combobox ID="Selector" Float="right" Style="font:8pt tahoma" Change="javascript:scChange(this,event)">
            <ListItem Header="Applications" Value="Applications"/>
            <ListItem Header="Business" Value="Business"/>
            <ListItem Header="Controls" Value="Controls"/>
            <ListItem Header="Core 1" Value="Core1" />
            <ListItem Header="Core 2" Value="Core2"/>
            <ListItem Header="Core 3" Value="Core3" />
            <ListItem Header="Database" Value="Database"/>
            <ListItem Header="Flags" Value="Flags"/>
            <ListItem Header="Imaging" Value="Imaging"/>
            <ListItem Header="Multimedia" Value="Multimedia"/>
            <ListItem Header="Network" Value="Network" />"
            <ListItem Header="Other" Value="Other" />
            <ListItem Header="People" Value="People" />
            <ListItem Header="Software" Value="Software" />
            <ListItem Header="Word Processing" Value="WordProcessing"/>
          </Combobox>
                <Literal Text="Icons:"/>
        </Border>

              <Border ID="List" Height="100%" GridPanel.Height="100%" Click="javascript:scClick(this,event)" Border="none">
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="ApplicationsList" Height="100%" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="BusinessList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="ControlsList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="Core1List" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="Core2List" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="Core3List" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="DatabaseList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="FlagsList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="ImagingList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="MultimediaList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="NetworkList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="OtherList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="PeopleList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="SoftwareList" Height="100%" Visible="false" Border="none"/>
                <Scrollbox Class="scScrollbox scFixSize scFixSizeNested scKeepFixSize" ID="WordProcessingList" Height="100%" Visible="false" Border="none"/>
        </Border>

      </GridPanel>
          </Tab> 
        </VerticalTabstrip>

        <GridPanel Width="100%" Columns="2" Margin="8px 0px 0px 0px">
          <Border Padding="0px 8px 0px 0px">
            <Literal Text="Icon:"/>
          </Border>

          <Border GridPanel.Width="100%">
            <Edit ID="IconFile" Width="100%"/>
          </Border>

        </GridPanel>
        
      </GridPanel>

    </FormDialog>
  </SetIcon>
</control>
